<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutTopic_OneTopic"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorMyWhite">

        <TextView
            android:id="@+id/txtTitle_OneTopic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="target - nnow with cartwheell"
            android:textSize="20sp"
            android:textColor="@color/colorMyBlue1"
            android:gravity="left|center"/>

        <TextView
            android:id="@+id/txtSize_OneTopic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="140k"
            android:textSize="16sp"
            android:textColor="@color/colorMyGray_10"
            android:gravity="center" />

    </LinearLayout>
</LinearLayout>