<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.property.david.tp.Fragments.SearchFragment">

    <LinearLayout
        android:id="@+id/layoutMain_SearchFrg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMyWhite"
        android:orientation="vertical"
        android:paddingLeft="20sp"
        android:paddingRight="20sp" >

        <LinearLayout
            android:id="@+id/layoutHeader_Search"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="30sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="Search"
                android:textColor="@color/colorMyGray_10"
                android:textStyle="bold"
                android:textSize="28sp"/>

            <Button
                android:id="@+id/btnAdd_SearchFrg"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="45sp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fa_plus"
                android:textColor="@color/colorMyGray_10"
                android:textSize="24sp"
                android:padding="0sp"
                android:layout_gravity="right|center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp">

            <android.support.v7.widget.SearchView
                android:id="@+id/searchView_SearchFrg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gray_round_border_background"/>

            <Button
                android:id="@+id/btnCancel_SearchFrg"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Cancel"
                android:textColor="@color/colorMyBlue1"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:visibility="gone"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trending"
            android:textColor="@color/colorMyGray_10"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="20sp"/>

        <ListView
            android:id="@+id/listTopics_SearchFrg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorMyWhite"/>


    </LinearLayout>

</FrameLayout>
