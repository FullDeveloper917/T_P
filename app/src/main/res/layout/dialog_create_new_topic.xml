<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30sp"
    android:paddingLeft="30sp"
    android:paddingRight="30sp"
    android:paddingBottom="10sp"
    android:background="@color/colorMyWhite">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a Topic"
        android:textColor="@color/colorMyGray_10"
        android:textSize="18sp"
        android:gravity="left"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtTitle_CreateNewTopicDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:textColor="@color/colorMyGray_10"
        android:textSize="14sp"
        android:paddingLeft="10sp"
        android:gravity="left|center"/>

    <TextView
        android:id="@+id/txtWarning_CreateNewTopicDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xxx already exits"
        android:textColor="@color/colorMyGray_10"
        android:textSize="12sp"
        android:gravity="left"
        android:visibility="invisible"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCreate_CreateNewTopicDialog"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:textColor="@color/colorMyGray_10"
            android:textSize="14sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btnCancel_CreateNewTopicDialog"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/colorMyGray_10"
            android:textSize="14sp"
            android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>